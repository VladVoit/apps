.clearfix:after {
	display: block;
	height: 0;
	width: 100%;
	clear: both;
}

.navbar {
	height: 50px;
	background-color: #101010;
	margin-bottom: 0;
}

.content {
	margin-top: 50px;
}

.sidebar {
	height: 100%;
	position: fixed;
	left: 0;
	border-right: 1px solid #CBCDD3;
	top: 50px;
	background-color: #A5A5A5;
}

.sidebar ul {
	margin: 0 -15px 0 -15px;
	padding: 0;
	list-style: none;

}

.sidebar ul a {
	background: #ddd;
	padding: 10px 20px;
	display: block;
	font-size: 16px;
	text-decoration: none;
	border-bottom: 1px solid #CBCDD3;
}

.sidebar ul a:hover {
	color: #337ab7;
	text-decoration: none;
	background-color: #fff;
}

h4 {
	margin-top: 15px;
	color: #fff;
}


.right-side {
	height: 100%;
	position: absolute;
	top: 0px;
	padding-top: 65px;
}

.page-title {
	margin: 0 0 15px 0;
  	padding: 0 0 0 15px;
	color: #101010;
}


.product {
	margin-bottom: 30px; 
}

.p-image {
	width: 100%;
	height: 180px;
	text-align: center;
	border-bottom: 1px solid #ddd;
	margin-bottom: 20px;
}

.p-image img {
	max-width: 100%;
	max-height: 100%;
}

.wrap-product {
	padding-bottom: 10px;
	border: 1px solid #ddd;
}

.p-control {
	float: left;
  	margin-right: 20px;
}

.product-footer {
	padding-left: 15px;
}